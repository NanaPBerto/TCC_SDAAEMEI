{{! views/admin/validarUsuarios.handlebars }}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fas fa-user-check me-2"></i>Validação de Usuários
            </h2>
        </div>
    </div>

    {{! Seção de Usuários Pendentes }}
    <div class="row mb-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-clock me-2"></i>Usuários Pendentes de Validação
                        <span class="badge bg-dark ms-2">{{musicosPendentes.length}}</span>
                    </h5>
                </div>
                <div class="card-body">
                    {{#if musicosPendentes.length}}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>Login</th>
                                        <th>Email</th>
                                        <th>Cidade/UF</th>
                                        <th>Data de Cadastro</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each musicosPendentes}}
                                    <tr>
                                        <td>{{this.nome}}</td>
                                        <td>{{this.login}}</td>
                                        <td>{{this.email}}</td>
                                        <td>{{this.cidade}}/{{this.uf}}</td>
                                        <td>{{formatDate this.createdAt}}</td>
                                        <td>
                                            <button class="btn btn-success btn-sm validar-btn" data-id="{{this.id}}">
                                                <i class="fas fa-check me-1"></i>Validar
                                            </button>
                                            <a href="/perfis/{{this.id}}" class="btn btn-info btn-sm" target="_blank">
                                                <i class="fas fa-eye me-1"></i>Ver Perfil
                                            </a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    {{else}}
                        <p class="text-muted text-center py-3">Nenhum usuário pendente de validação.</p>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>

    {{! Seção de Usuários Validados }}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-check-circle me-2"></i>Usuários Validados
                        <span class="badge bg-light text-dark ms-2">{{musicosValidados.length}}</span>
                    </h5>
                </div>
                <div class="card-body">
                    {{#if musicosValidados.length}}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>Login</th>
                                        <th>Email</th>
                                        <th>Cidade/UF</th>
                                        <th>Data de Validação</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each musicosValidados}}
                                    <tr>
                                        <td>{{this.nome}}</td>
                                        <td>{{this.login}}</td>
                                        <td>{{this.email}}</td>
                                        <td>{{this.cidade}}/{{this.uf}}</td>
                                        <td>{{formatDate this.updatedAt}}</td>
                                        <td>
                                            <button class="btn btn-warning btn-sm desvalidar-btn" data-id="{{this.id}}">
                                                <i class="fas fa-times me-1"></i>Desvalidar
                                            </button>
                                            <a href="/perfis/{{this.id}}" class="btn btn-info btn-sm" target="_blank">
                                                <i class="fas fa-eye me-1"></i>Ver Perfil
                                            </a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    {{else}}
                        <p class="text-muted text-center py-3">Nenhum usuário validado.</p>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Validar usuário
    document.querySelectorAll('.validar-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const userId = this.getAttribute('data-id');
            validarUsuario(userId, this);
        });
    });

    // Desvalidar usuário
    document.querySelectorAll('.desvalidar-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const userId = this.getAttribute('data-id');
            desvalidarUsuario(userId, this);
        });
    });

    function validarUsuario(userId, button) {
        if (!confirm('Tem certeza que deseja validar este usuário?')) return;

        button.disabled = true;
        button.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Validando...';

        fetch(`/admin/validar-usuario/${userId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Erro ao validar usuário: ' + data.message);
                button.disabled = false;
                button.innerHTML = '<i class="fas fa-check me-1"></i>Validar';
            }
        })
        .catch(error => {
            console.error('Erro:', error);
            alert('Erro ao validar usuário');
            button.disabled = false;
            button.innerHTML = '<i class="fas fa-check me-1"></i>Validar';
        });
    }

    function desvalidarUsuario(userId, button) {
        if (!confirm('Tem certeza que deseja desvalidar este usuário?')) return;

        button.disabled = true;
        button.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Desvalidando...';

        fetch(`/admin/desvalidar-usuario/${userId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Erro ao desvalidar usuário: ' + data.message);
                button.disabled = false;
                button.innerHTML = '<i class="fas fa-times me-1"></i>Desvalidar';
            }
        })
        .catch(error => {
            console.error('Erro:', error);
            alert('Erro ao desvalidar usuário');
            button.disabled = false;
            button.innerHTML = '<i class="fas fa-times me-1"></i>Desvalidar';
        });
    }
});
</script>