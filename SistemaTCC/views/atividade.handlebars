<div class="container my-5">
  <div class="form-section">
    <h2>{{atividade.nome}}</h2>
    <div class="row g-4">
      <div class="col-md-6">
        {{#if atividade.imagemBase64}}
          <img src="{{atividade.imagemBase64}}" alt="Imagem da atividade" class="img-fluid rounded mb-3" style="max-height:300px;">
        {{/if}}
        <p><strong>Descrição:</strong> {{atividade.descricao}}</p>
        <p><strong>Objetivo:</strong> {{atividade.objetivo}}</p>
        <p><strong>Indicação:</strong> {{atividade.indicacao}}</p>
        <p><strong>Recursos:</strong> {{atividade.recursos}}</p>
        <p><strong>Condições:</strong> {{atividade.condicoes}}</p>
        <p><strong>Observações:</strong> {{atividade.obs}}</p>
        <p><strong>Desenvolvedor:</strong> {{atividade.desenvolvedorNome}}</p>
      </div>
      <div class="col-md-6">
        <ul class="list-group mb-3">
          <li class="list-group-item"><strong>Categoria:</strong> {{atividade.tipo.nome}}</li>
          <li class="list-group-item"><strong>Duração:</strong> {{atividade.duracao}}</li>
          <li class="list-group-item"><strong>Classificação:</strong> {{atividade.classificacao}}</li>
          <li class="list-group-item"><strong>Integrantes:</strong> {{atividade.vagas}}</li>
        </ul>
        {{#if atividade.partituraBase64}}
          <p><strong>Partitura:</strong></p>
          <a href="{{atividade.partituraBase64}}" target="_blank" class="btn btn-outline-primary mb-2">Visualizar Partitura</a>
        {{/if}}
        {{#if atividade.musicaBase64}}
          <p><strong>Áudio:</strong></p>
          <audio controls>
            <source src="{{atividade.musicaBase64}}">
            Seu navegador não suporta o elemento de áudio.
          </audio>
        {{/if}}
      </div>
    </div>
  </div>
</div>
