<div class="container cadastro py-5">
  <div class="mx-auto" style="max-width: 700px;">
    <h1 class="mb-4 text-center" style="color: var(--primary); font-weight:700;">
      <i class="fas fa-user-plus me-2"></i>Faça seu Cadastro
    </h1>
    <form action="/usuario/add" method="POST" enctype="multipart/form-data" class="bg-white rounded-4 shadow p-4">
      <!-- Informações Pessoais -->
      <fieldset class="mb-4 border-0">
        <legend class="mb-3" style="color: var(--primary); font-size:1.2rem;">
          <i class="fas fa-user-circle me-2"></i>Informações Pessoais
        </legend>
        <input type="hidden" name="tipo" value="educador">
        <div class="row g-3">
          <!-- Nome -->
          <div class="col-md-6">
            <label for="nome" class="form-label">Nome*</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
              <input type="text" class="form-control" id="nome" name="nome" placeholder="Seu nome completo" maxlength="30" required>
            </div>
          </div>
          <!-- Usuário -->
          <div class="col-md-6">
            <label for="usuario" class="form-label">Usuário*</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-at"></i></span>
              <input type="text" class="form-control" id="usuario" name="usuario" maxlength="20" placeholder="Nome de usuário único" required>
            </div>
          </div>
          <!-- Senha -->
          <div class="col-md-6">
            <label for="senha" class="form-label">Senha*</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-lock"></i></span>
              <input type="password" class="form-control" id="senha" name="senha" maxlength="10" placeholder="Mínimo 8 caracteres" required>
            </div>
            <small class="text-muted ms-2">Use letras, números e símbolos</small>
          </div>
          <!-- Email -->
          <div class="col-md-6">
            <label for="email" class="form-label">Email*</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-envelope"></i></span>
              <input type="email" class="form-control" id="email" name="email" maxlength="50" placeholder="seu@email.com" required>
            </div>
          </div>
          <!-- UF -->
          <div class="col-md-6">
            <label for="uf" class="form-label">UF*</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
              <select class="form-select" id="uf" name="uf" required>
                <option value="">Selecione</option>
                <option value="AC">AC</option>
                <option value="AL">AL</option>
                <option value="AP">AP</option>
                <option value="AM">AM</option>
                <option value="BA">BA</option>
                <option value="CE">CE</option>
                <option value="DF">DF</option>
                <option value="ES">ES</option>
                <option value="GO">GO</option>
                <option value="MA">MA</option>
                <option value="MT">MT</option>
                <option value="MS">MS</option>
                <option value="MG">MG</option>
                <option value="PA">PA</option>
                <option value="PB">PB</option>
                <option value="PR">PR</option>
                <option value="PE">PE</option>
                <option value="PI">PI</option>
                <option value="RJ">RJ</option>
                <option value="RN">RN</option>
                <option value="RS">RS</option>
                <option value="RO">RO</option>
                <option value="RR">RR</option>
                <option value="SC">SC</option>
                <option value="SP">SP</option>
                <option value="SE">SE</option>
                <option value="TO">TO</option>
              </select>
            </div>
          </div>
          <!-- Cidade -->
          <div class="col-md-6">
            <label for="cidade" class="form-label">Cidade*</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
              <input type="text" class="form-control" id="cidade" name="cidade" placeholder="Sua cidade" maxlength="30" required>
            </div>
          </div>
          <!-- Foto de Perfil -->
          <div class="col-md-6">
            <label for="fotoP" class="form-label">Foto de Perfil</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-camera"></i></span>
              <input type="file" class="form-control" id="fotoP" name="imagem" accept="image/*">
            </div>
          </div>
        </div>
      </fieldset>
      <!-- Termos e Condições -->
      <div class="form-check mb-4">
        <input class="form-check-input" type="checkbox" id="termos" required>
        <label class="form-check-label" for="termos">
          Li e aceito os <a href="#" style="color: var(--primary);">Termos de Serviço</a> e <a href="#" style="color: var(--primary);">Política de Privacidade</a>
        </label>
      </div>
      <!-- Botões -->
      <div class="d-flex justify-content-end gap-3">
        <a href="login.html" class="btn btn-outline-secondary">
          <i class="fas fa-times-circle me-2"></i>Cancelar
        </a>
        <button type="submit" class="btn btn-primary" id="btnC">
          <i class="fas fa-user-plus me-2"></i>Criar Conta
        </button>
      </div>
    </form>
  </div>
</div>
