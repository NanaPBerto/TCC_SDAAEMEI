<body id="escolha">

<!-- Notas musicais animadas -->

    <div id="music-notes"></div>
    
    <div class="login-container">
        
        <div class="logo">
            <i class="fas fa-music"></i>
            <span>Musicoteca</span>
        </div>
        <h1>Plataforma Musical Educativa</h1>
        
        <div class="access-options" >
            <a href="/cadastroE">
            <div class="access-option viewer" onclick="accessAsViewer()">
                <div class="icon"><i class="fas fa-eye"></i></div>
 
                <h3>Área do Educador</h3>
                <p>Explore partituras e recursos educativos</p>
                <div class="features">
                    <span><i class="fas fa-check"></i> Visualize materiais</span>
                </div>
            </div>
            </a>
            <a href="/cadastroM">
            <div class="access-option contributor" onclick="accessAsContributor()">
                <div class="icon"><i class="fas fa-guitar"></i></div>


                 <h3>Área do Músico</h3>
                <p>Compartilhe suas composições e atividades pedagógicas</p>
                <div class="features">
                    <span><i class="fas fa-check"></i> Crie atividades</span>
                </div>
            </div>
            </a>
        </div>

        <div class="divider">
            <span>ou</span>
        </div>
        
        <div class="social-login">
            <p class="social-text">Acesse com sua rede social</p>
            <div class="social-icons">
                <div class="social-btn" onclick="socialLogin('google')">
                    <i class="fab fa-google"></i>
                    <span>Google</span>
                </div>
                <div class="social-btn" onclick="socialLogin('facebook')">
                    <i class="fab fa-facebook-f"></i>
                    <span>Facebook</span>
                </div>
            </div>
        </div>
    </div>
