<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/style.css"/>
    <title>Plataforma Musical</title>
</head>
<body>
    <!-- Cabeçalho -->
    <header>
      {{#if showMenu}}

        </div>
      </nav>
      {{/if}}
    </header>

    {{#if showBackButton}}
      <div class="w-100 d-flex" style="z-index: 1050;">
        <div class="mt-2 ms-2">
          <button type="button" class="btn btn- px-1 py-1" onclick="history.back()">
            <i class="bi bi-arrow-left me-2"></i>
          </button>
        </div>
      </div>
    {{/if}}

    <!-- Menu Lateral para Músico -->
{{#if showSidebar}}
<div class="sidebar">
    <ul class="sidebar-nav">
        <li class="sidebar-item">
            <span class="sidebar-icon"><i class="fas fa-music"></i></span>
            <span class="sidebar-text">Minhas Atividades</span>
        </li>
        <li class="sidebar-item">
            <span class="sidebar-icon"><i class="fas fa-plus-circle"></i></span>
            <span class="sidebar-text">Criar Atividades</span>
        </li>
        <li class="sidebar-item">
            <span class="sidebar-icon"><i class="fas fa-chart-line"></i></span>
            <span class="sidebar-text">Estatísticas</span>
        </li>
        <li class="sidebar-item">
            <span class="sidebar-icon"><i class="fas fa-users"></i></span>
            <span class="sidebar-text">Perfis</span>
        </li>
    </ul>
    
    <ul class="sidebar-footer">
        <li class="sidebar-item">
            <span class="sidebar-icon"><i class="fas fa-cog"></i></span>
            <span class="sidebar-text">Configurações</span>
        </li>
        <li class="sidebar-item">
            <span class="sidebar-icon"><i class="fas fa-sign-out-alt"></i></span>
            <span class="sidebar-text">Sair</span>
        </li>
    </ul>
</div>
{{/if}}

<!-- Menu Lateral para Educador -->
{{#if showSidebarE}}
<div class="sidebar">
    <ul class="sidebar-nav">
        <li class="sidebar-item">
