        </li>
        <li class="sidebar-item">
            <span class="sidebar-icon"><i class="fas fa-heart"></i></span>
            <span class="sidebar-text">Atividades Favoritas</span>
        </li>
        <li class="sidebar-item">
            <span class="sidebar-icon"><i class="fas fa-star"></i></span>
            <span class="sidebar-text">Perfis Favoritos</span>
        </li>
        <li class="sidebar-item">
            <span class="sidebar-icon"><i class="fas fa-history"></i></span>
            <span class="sidebar-text">Histórico de Atividades</span>
        </li>
    </ul>
    
    <ul class="sidebar-footer">
        <li class="sidebar-item">
            <span class="sidebar-icon"><i class="fas fa-cog"></i></span>
            <span class="sidebar-text">Configurações</span>
        </li>
        <li class="sidebar-item">
            <span class="sidebar-icon"><i class="fas fa-sign-out-alt"></i></span>
            <span class="sidebar-text">Sair</span>
        </li>
    </ul>
</div>
{{/if}}
      
    <!-- Conteúdo Principal -->
    <main class="container mt-4" style="margin-left: 70px; padding-top: 70px;">
        {{{body}}}
    </main>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/scripts/formulario.js"></script>
    <script src="/scripts/escolher.js"></script>
    <script src="/scripts/menuLateral.js"></script>
