<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/style.css"/>
    <title>Musicoteca</title>
</head>
<body>
    <!-- Cabeçalho -->
    <header>
      {{#if showMenu}}
        {{#if usuario}}
          <!-- Menu superior para usuário logado -->
          <nav class="navbar" id="navbar">
            <div class="navbar-container">
              <div class="user-profile">
                {{#if usuario.imagem}}
                  <img src="data:image/jpeg;base64,{{usuario.imagemBase64}}" alt="Foto de Perfil" class="rounded-circle ms-2" style="width:48px; height:48px; object-fit:cover; vertical-align:middle;">
                {{/if}}
              </div>
              <a href="/index" class="site-logo">MUSICOTECA</a>
            </div>
          </nav>
        {{else}}
          <!-- Menu superior para visitante (não logado) -->
          <nav class="navbar" id="navbar">
            <div class="navbar-container">
              <a href="/index" class="site-logo">MUSICOTECA</a>
              <nav id="menuS" class="navbar navbar-expand-sm">
                <div id="menuS" class="container-fluid">
                  <ul class="navbar-nav w-100">
                    <li class="nav-item" style="margin-left: 15px;">
                    </li>
                    <li class="nav-item ms-auto">
                      <a href="/login" class="btn btn-outline-light me-2">Login</a>
                      <a href="/escolher" class="btn btn-outline-light">Cadastro</a>
                    </li>
                  </ul>
                </div>
              </nav>
            </div>
          </nav>
        {{/if}}
      {{/if}}
    </header>

    {{#if showBackButton}}
      <div class="w-100 d-flex" style="z-index: 1050;">
        <div class="mt-2 ms-2">
          <button type="button" class="btn btn- px-1 py-1" onclick="history.back()">
            <i class="bi bi-arrow-left me-2"></i>
          </button>
        </div>
      </div>
    {{/if}}

    <!-- Menu Lateral para NÃO logado, exceto na página de escolher -->
{{#unless usuario}}
  {{#unless paginaEscolher}}
    <div class="sidebar">
        <ul class="sidebar-nav">
          <a href="/index">
            <li class="sidebar-item">
                <span class="sidebar-icon"><i class="fas fa-home"></i></span>
                <span class="sidebar-text">Início</span>
            </li>
            </a>
            <a href="/login">
            <li class="sidebar-item">
                <span class="sidebar-icon"><i class="fas fa-sign-in-alt"></i></span>
                <span class="sidebar-text">Login</span>
            </li>
            </a>
        </ul>
    </div>
  {{/unless}}
{{/unless}}

<!-- Menu Lateral para logado (já existente, exibe conforme tipo) -->
{{#if usuario}}
  {{#if showSidebar}}
    <div class="sidebar">
        <ul class="sidebar-nav">
          <a href="/submissoes">
            <li class="sidebar-item">
                <span class="sidebar-icon"><i class="fas fa-music"></i></span>
                <span class="sidebar-text">Minhas Atividades</span>
            </li>
          </a>
          <a href="/novaAtividade">
            <li class="sidebar-item">
                <span class="sidebar-icon"><i class="fas fa-plus-circle"></i></span>
                <span class="sidebar-text">Criar Atividades</span>
            </li> </a>
            <li class="sidebar-item">
                <span class="sidebar-icon"><i class="fas fa-chart-line"></i></span>
                <span class="sidebar-text">Estatísticas</span>
            </li>
            <li class="sidebar-item">
                <span class="sidebar-icon"><i class="fas fa-users"></i></span>
                <span class="sidebar-text">Perfis</span>
            </li>
        </ul>
        <ul class="sidebar-footer">
            <li class="sidebar-item">
                <span class="sidebar-icon"><i class="fas fa-cog"></i></span>
                <a href="/perfil" class="sidebar-text">Configurações</a>
            </li>
            <a href="/logout" class="nav-link">
            <li class="sidebar-item">
                <span class="sidebar-icon"><i class="fas fa-sign-out-alt"></i></span>
                <span class="sidebar-text">Sair</span>
            </li></a>
        </ul>
    </div>
  {{/if}}

  {{#if showSidebarE}}
    <div class="sidebar">
        <ul class="sidebar-nav">
            <li class="sidebar-item">
                <span class="sidebar-icon"><i class="fas fa-lightbulb"></i></span>
                <span class="sidebar-text">Atividades Sugeridas</span>
            </li>
            <li class="sidebar-item">
                <span class="sidebar-icon"><i class="fas fa-heart"></i></span>
                <span class="sidebar-text">Atividades Favoritas</span>
            </li>
            <li class="sidebar-item">
                <span class="sidebar-icon"><i class="fas fa-star"></i></span>
                <span class="sidebar-text">Perfis Favoritos</span>
            </li>
            <li class="sidebar-item">
                <span class="sidebar-icon"><i class="fas fa-history"></i></span>
                <span class="sidebar-text">Histórico de Atividades</span>
            </li>
        </ul>
        <ul class="sidebar-footer">
            <li class="sidebar-item">
                <span class="sidebar-icon"><i class="fas fa-cog"></i></span>
                <a href="/perfil" class="sidebar-text">Configurações</a>
            </li>
            <a href="/logout">
            <li class="sidebar-item">
                <span class="sidebar-icon"><i class="fas fa-sign-out-alt"></i></span>
                <span class="sidebar-text">Sair</span>
            </li></a>
        </ul>
    </div>
  {{/if}}
{{/if}}
      
    <!-- Conteúdo Principal -->
    <main class="container mt-4" style="margin-left: 70px; padding-top: 70px;">
        {{{body}}}
    </main>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/scripts/cadastros.js"></script>
    <script src="/scripts/escolher.js"></script>
    <script src="/scripts/menuLateral.js"></script>
</body>
</html>