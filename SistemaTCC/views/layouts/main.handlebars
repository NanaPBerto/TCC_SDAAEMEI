<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/style.css"/>
    <title>Plataforma Musical</title>
</head>
<body>
    <!-- Cabeçalho -->
    <header>
      {{#if showMenu}}
      <nav id="menuS" class="navbar navbar-expand-sm">
        <div id="menuS" class="container-fluid">
          <ul class="navbar-nav w-100">
            <li class="nav-item" style="margin-left: 15px;">
              <!-- <a href="/"><img src="" alt="logo" width="30px" class="logo"></a> -->
            </li>
            <li class="nav-item">
             {{#if contribuidor}} <a href="/"><img src="https://img.icons8.com/ios11/200/FFFFFF/home.png" alt="casinha" width="30px" class="home"></a> {{/if}}
             {{#if visualizador}} <a href="/homeE"><img src="https://img.icons8.com/ios11/200/FFFFFF/home.png" alt="casinha" width="30px" class="home"></a> {{/if}}           
            </li>

            <li class="nav-item ms-auto">
              <img src="images/perfil.png" alt="foto de perfil" width="40px" id="perfil" data-bs-toggle="dropdown">
              <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Meu Perfil</a></li>
                <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Configurações</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/escolher"><i class="bi bi-box-arrow-right me-2"></i>Sair</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </nav>
      {{/if}}
    </header>

    {{#if showBackButton}}
      <div class="w-100 d-flex" style="z-index: 1050;">
        <div class="mt-2 ms-2">
          <button type="button" class="btn btn- px-1 py-1" onclick="history.back()">
            <i class="bi bi-arrow-left me-2"></i>
          </button>
        </div>
      </div>
    {{/if}}


    <!-- Menu Lateral -->
    {{#if showSidebar}}
   <div class="sidebar">
        <ul class="sidebar-nav">
            <li class="sidebar-item">
                <span class="sidebar-icon"><i class="fas fa-home"></i></span>
