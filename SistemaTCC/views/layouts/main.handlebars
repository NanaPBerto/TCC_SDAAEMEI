<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/style.css"/>
    <title>Plataforma Musical</title>
</head>
<body>
    <!-- Cabeçalho -->
    <header>
      {{#if showMenu}}
      <nav id="menuS" class="navbar navbar-expand-sm">
        <div id="menuS" class="container-fluid">
          <ul class="navbar-nav w-100">
            <li class="nav-item" style="margin-left: 15px;">
              <!-- <a href="/"><img src="" alt="logo" width="30px" class="logo"></a> -->
            </li>
            <li class="nav-item">
             {{#if contribuidor}} <a href="/"><img src="https://img.icons8.com/ios11/200/FFFFFF/home.png" alt="casinha" width="30px" class="home"></a> {{/if}}
             {{#if visualizador}} <a href="/homeE"><img src="https://img.icons8.com/ios11/200/FFFFFF/home.png" alt="casinha" width="30px" class="home"></a> {{/if}}           
            </li>

            <li class="nav-item ms-auto">
              <img src="images/perfil.png" alt="foto de perfil" width="40px" id="perfil" data-bs-toggle="dropdown">
              <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Meu Perfil</a></li>
                <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Configurações</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/escolher"><i class="bi bi-box-arrow-right me-2"></i>Sair</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </nav>
      {{/if}}
    </header>

    {{#if showBackButton}}
      <div class="w-100 d-flex" style="z-index: 1050;">
        <div class="mt-2 ms-2">
          <button type="button" class="btn btn- px-1 py-1" onclick="history.back()">
            <i class="bi bi-arrow-left me-2"></i>
          </button>
        </div>
      </div>
    {{/if}}


    <!-- Menu Lateral -->
    {{#if showSidebar}}
    <div class="offcanvas offcanvas-start" tabindex="-1" id="mLateral">
        <div class="offcanvas-header border-bottom">
          <div class="d-flex align-items-center">
            <img style="margin-right: 10px; color: var(--primary);" src="" alt="logo" width="30px" class="logo">
            <h5 class="offcanvas-title mb-0" style="color: var(--primary);">Plataforma Musical</h5>
            
          </div>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
          <div class="d-flex flex-column h-100">
            <div class="mb-4">
              <div class="position-relative d-flex align-items-center mb-3 p-2 rounded hover-item active-menu-item">
                <i class="bi bi-speedometer2 me-3" style="color: var(--primary-color);"></i>
                <a href="/" class="stretched-link text-decoration-none">Painel de Contribuidor</a>
              </div>
              <div class="position-relative d-flex align-items-right mb-3 p-2 rounded hover-item ps-4">
                <i class="bi bi-plus-circle me-3" style="color: var(--primary-color);"></i>
                <a href="/novaAtividade" class="stretched-link text-decoration-none">Nova Atividade</a>
              </div>
              <div class="position-relative d-flex align-items-right mb-3 p-2 rounded hover-item ps-4">
                <i class="bi bi-list-ul me-3" style="color: var(--primary-color);"></i>
                <a href="/minhasSubmissoes" class="stretched-link text-decoration-none">Minhas Submissões</a>
              </div>
              <div class="position-relative d-flex align-items-right mb-3 p-2 rounded hover-item ps-4">
                <i class="bi bi-book me-3" style="color: var(--primary-color);"></i>
                <a href="/repertorio" class="stretched-link text-decoration-none">Repertório</a>
              </div>
              <div class="position-relative d-flex align-items-right mb-3 p-2 rounded hover-item ps-4">
                <i class="bi bi-bar-chart me-3" style="color: var(--primary-color);"></i>
                <a href="/estatisticas.html" class="stretched-link text-decoration-none">Estatísticas</a>
              </div>
            </div>
            
            <div class="mt-auto">
              <div class="border-top pt-3">
                <div class="position-relative d-flex align-items-center mb-3 p-2 rounded hover-item">
                  <i class="bi bi-gear me-3" style="color: var(--primary-color);"></i>
                  <a href="#" class="stretched-link text-decoration-none">Configurações</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Botão do Menu Lateral -->
      <button onmouseenter="abreMenuLateral()" onmouseleave="fechaMenuLateral()" class="btn-menu-lateral position-fixed start-0 top-50 translate-middle-y" 
              data-bs-toggle="offcanvas" 
              data-bs-target="#mLateral"
              style="z-index: 1040;">
        <i class="bi bi-list text-white"></i>
      </button>
    {{/if}}

    {{#if showSidebarE}}
          <!-- Menu Lateral -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="mLateral">
      <div class="offcanvas-header border-bottom">
        <div class="d-flex align-items-center">
          <i class="bi bi-music-note-beamed me-2" style="color: var(--primary); font-size: 1.5rem;"></i>
          <h5 class="offcanvas-title mb-0" style="color: var(--primary);">Harmonia</h5>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
        <div class="d-flex flex-column h-100">
          <div class="mb-4">
            <div class="position-relative d-flex align-items-center mb-3 p-2 rounded hover-item">
              <i class="bi bi-bookmark-star me-3" style="color: var(--primary);"></i>
              <a href="atividadesFav.html" class="stretched-link text-decoration-none">Atividades Favoritas</a>
            </div>
            <div class="position-relative d-flex align-items-center mb-3 p-2 rounded hover-item">
              <i class="bi bi-people me-3" style="color: var(--primary);"></i>
              <a href="atividadesFav.html" class="stretched-link text-decoration-none">Perfis Favoritos</a>
            </div>
          </div>
          
          <div class="mt-auto">
            <div class="position-relative d-flex align-items-center mb-3 p-2 rounded hover-item">
              <i class="bi bi-gear me-3" style="color: var(--primary);"></i>
              <a href="#" class="stretched-link text-decoration-none">Configurações</a>
            </div>
            
            <div class="border-top pt-3">
              <div class="position-relative d-flex align-items-center mb-3 p-2 rounded hover-item">
                <i class="bi bi-box-arrow-in-right me-3" style="color: var(--primary);"></i>
                <a href="login.html" class="stretched-link text-decoration-none">Login</a>
              </div>
              <div class="position-relative d-flex align-items-center mb-3 p-2 rounded hover-item">
                <i class="bi bi-person-plus me-3" style="color: var(--primary);"></i>
                <a href="/cadastroE" class="stretched-link text-decoration-none">Cadastre-se</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Botão do Menu Lateral -->
      <button class="btn-menu-lateral position-fixed start-0 top-50 translate-middle-y" 
              data-bs-toggle="offcanvas" 
              data-bs-target="#mLateral"
              style="z-index: 1040;">
        <i class="bi bi-list text-white"></i>
      </button>
    {{/if}}
      
      
    <!-- Conteúdo Principal -->
    <main class="container mt-4">
        {{{body}}}
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/scripts/formulario.js"></script>
    <script src="/scripts/escolher.js"></script>
    <script src="/scripts/menuLateral.js"></script>
</body>
</html>