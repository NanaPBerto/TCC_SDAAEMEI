<!-- Área de Login -->
<div id="login-container" class="container">
    <div id="login-box" class="row g-0">
        <div class="col-md-6 login-form">
            <h2>Faça Login</h2>
            {{#if alert}}
                <div class="alert alert-error">{{alert}}</div>
            {{/if}}
            {{#if error}}
                <div class="alert alert-error">{{error}}</div>
            {{/if}}
            <form id="loginForm" action="/login" method="POST">
                <div class="mb-3">
                    <label for="login" class="form-label">Usuário</label>
                    <input type="text" class="form-control" id="login" name="login" placeholder="Digite seu usuário" required>
                </div>
                <div class="mb-3"> 
                    <label for="senha" class="form-label">Senha</label>
                    <input type="password" class="form-control" id="senha" name="senha" placeholder="Digite sua senha" required>
                </div>
                <a href="#" class="forgot-password">Esqueceu sua senha?</a>
                <button type="submit" class="btn btn-login">Entrar</button>
            </form>
        </div>
        <div class="col-md-6 login-side">
            <h3>Não possui uma conta?</h3>
            <p>Crie uma conta agora para acessar todos os recursos da plataforma Musicoteca.</p>
            <a href="/escolher" class="btn btn-escolher">Criar Conta</a>
        </div>
    </div>
</div>