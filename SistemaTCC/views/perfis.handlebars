<div class="container mt-4">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h4 class="mb-0">
        <i class="bi bi-people-fill me-2"></i>
        Usuários Cadastrados
      </h4>
    </div>
    <div class="card-body">
      <div class="row">
        {{#each usuarios}}
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
              <!-- Imagem do perfil -->
              <div class="mb-3">
                {{#if this.imagem}}
                  <img src="{{this.imagem}}" 
                       alt="{{this.nome}}" 
                       class="rounded-circle" 
                       style="width: 100px; height: 100px; object-fit: cover;">
                {{else}}
                  <div class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center" 
                       style="width: 100px; height: 100px;">
                    <i class="fas fa-user fa-2x text-secondary"></i>
                  </div>
                {{/if}}
              </div>
              
              <!-- Informações do usuário -->
              <h5 class="card-title">{{this.nome}}</h5>
              
              <!-- Tipo de usuário com badge colorido -->
              <span class="badge {{#if (eq this.tipo 'musico')}}bg-success{{else}}bg-info{{/if}} mb-2">
                {{#if (eq this.tipo 'musico')}}
                  <i class="fas fa-music me-1"></i> Músico
                {{else}}
                  <i class="fas fa-chalkboard-teacher me-1"></i> Educador
                {{/if}}
              </span>
              
              <div class="user-info text-start small">
                {{#if this.email}}
                <p class="mb-1"><strong>Email:</strong> {{this.email}}</p>
                {{/if}}
                
                {{#if this.cidade}}
                <p class="mb-1"><strong>Localização:</strong> {{this.cidade}}/{{this.uf}}</p>
                {{/if}}
                
                {{#if this.fone}}
                <p class="mb-1"><strong>Telefone:</strong> {{this.fone}}</p>
                {{/if}}
                
                {{#if this.obs}}
                <p class="mb-1"><strong>Observações:</strong> {{this.obs}}</p>
                {{/if}}
              </div>
              
              <!-- Botão para ver perfil -->
              <div class="mt-3">
                <a href="/perfis/{{this.id}}" class="btn btn-primary btn-sm">
                  <i class="fas fa-eye me-1"></i> Ver Perfil Completo
                </a>
              </div>
            </div>
          </div>
        </div>
        {{else}}
        <div class="col-12">
          <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i>
            Nenhum usuário cadastrado no momento.
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>