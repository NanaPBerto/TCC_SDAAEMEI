<div class="container mt-4">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h4 class="mb-0">
        <i class="bi bi-people-fill me-2"></i>
        Usuários Cadastrados
      </h4>
    </div>
    
    <!-- Filtros Rápidos -->
    <div class="users-filters">
      <div class="filter-btn {{#if (eq filtroAtual 'todos')}}active{{/if}}">Todos</div>
      <div class="filter-btn {{#if (eq filtroAtual 'musico')}}active{{/if}}">Professores de Música</div>
      <div class="filter-btn {{#if (eq filtroAtual 'educador')}}active{{/if}}">Educadores</div>
      <div class="search-box">
        <i class="fas fa-search"></i>
        <input type="search" placeholder="Buscar usuários..." value="{{pesquisaAtual}}">
      </div>
    </div>
     
    <div class="card-body">
      <div class="user-list">
        {{#each usuarios}}
        <div class="user-item">
          <!-- Avatar -->
          <div class="user-avatar">
            {{#if this.imagem}}
              <img src="{{this.imagem}}" alt="{{this.nome}}">
            {{else}}
              <i class="fas fa-user"></i>
            {{/if}}
          </div>
          
          <!-- Informações Principais -->
          <div class="user-main-info">
            <div class="user-name-type">
              <div class="user-name">{{this.nome}}</div>
              <span class="user-badge {{this.tipo}}">
                {{#if (eq this.tipo 'musico')}}
                  <i class="fas fa-music me-1"></i> Músico
                {{else}}
                  <i class="fas fa-chalkboard-teacher me-1"></i> Educador
                {{/if}}
              </span>
            </div>
            
            <!-- Detalhes de Contato -->
            <div class="user-details">
              {{#if this.email}}
              <div class="detail-item">
                <i class="fas fa-envelope"></i>
                <span>{{this.email}}</span>
              </div>
              {{/if}}
              
              {{#if this.cidade}}
              <div class="detail-item">
                <i class="fas fa-map-marker-alt"></i>
                <span>{{this.cidade}}/{{this.uf}}</span>
              </div>
              {{/if}}
              
              {{#if this.fone}}
              <div class="detail-item">
                <i class="fas fa-phone"></i>
                <span>{{this.fone}}</span>
              </div>
              {{/if}}
            </div>
          </div>
          
          <!-- Ações -->
          <div class="user-actions">
            <a href="/perfil/{{this.id}}" class="btn-sm btn-primary">
              <i class="fas fa-eye"></i> Ver
            </a>
            <button class="btn-sm">
              <i class="fas fa-comment"></i> Contatar
            </button>
          </div>
        </div>
        {{else}}
        <div class="empty-state">
          <i class="fas fa-users"></i>
          <h5>Nenhum usuário cadastrado</h5>
          <p>Quando usuários forem cadastrados, eles aparecerão aqui.</p>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>