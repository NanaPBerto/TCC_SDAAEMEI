<div class="container">
  <div class="form-section" style="height: auto;">
    <h4 class="mb-4">
      <i class="bi bi-list-ul me-2" style="color: var(--primary);"></i>
      Minhas Submissões
    </h4>
    {{#if atividades.length}}
      <p class="text-muted text-center">Você tem {{atividades.length}} submissões.</p>
    {{else}}
      <div class="text-center">
        <small>Você ainda não submeteu nenhuma atividade.</small>
      </div>
    {{/if}} 
    <div class="atividades-container">
  {{#each atividades}}
    <div class="atividade-mini-card">
      <div class="atividade-mini-titulo">{{this.nome}}</div>
      <div class="atividade-mini-imgbox mb-2">
        {{#if this.imagem}}
          <img src="{{this.imagem}}" alt="Imagem da Atividade">
        {{else}}
          <i class="fas fa-music fa-2x" style="color: var(--primary-light);"></i>
        {{/if}}
      </div>
      <div class="atividade-mini-objetivo">{{this.objetivo}}</div>
      <div class="atividade-mini-actions">
        <a href="/atividade/{{this.id}}" title="Ver detalhes">
          <button type="button" class="atividade-mini-btn">
            <i class="fas fa-eye"></i>
          </button>
        </a>
        <a href="/editar/{{id}}" title="Editar">
          <button type="button" class="atividade-mini-btn editar">
            <i class="fas fa-pen"></i>
          </button>
        </a>
        <a href="/deletar/{{id}}" title="Deletar">
          <button type="button" class="atividade-mini-btn deletar">
            <i class="fas fa-trash"></i>
          </button>
        </a>
      </div>
    </div>
{{/each}}
</div>