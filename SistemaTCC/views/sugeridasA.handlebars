<div class="form-section">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="mb-0">
            <i class="bi bi-stars me-2"></i>Atividades Sugeridas para Você
        </h4>
        <div>
            <button class="btn btn-outline-primary btn-sm" onclick="recarregarSugestoes()">
                <i class="bi bi-arrow-clockwise me-1"></i>Atualizar
            </button>
        </div>
    </div>

    <!-- Container das sugestões -->
    <div id="sugeridas-container" class="atividades-container" 
         style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 1.5rem;">
        <!-- Será preenchido via JavaScript -->
    </div>
    
    <!-- Mensagem quando não há sugestões -->
    <div id="sugeridas-vazio" class="text-center py-5" style="display: none;">
        <i class="bi bi-inbox display-1 text-muted mb-3"></i>
        <h5 class="text-muted">Nenhuma atividade sugerida no momento</h5>
        <p class="text-muted">Tente atualizar as sugestões ou verifique se há atividades cadastradas.</p>
        <button class="btn btn-primary mt-3" onclick="recarregarSugestoes()">
            <i class="bi bi-arrow-clockwise me-2"></i>Recarregar Sugestões
        </button>
    </div>
</div>

<!-- Dados das atividades (invisível) -->
{{#if atividades}}
<script id="atividades-data" type="application/json">
{{{json atividades}}}
</script>
{{else}}
<script id="atividades-data" type="application/json">[]</script>
{{/if}}